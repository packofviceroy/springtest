pipeline {
    agent any
    parameters {
        booleanParam(
                                name: 'Deploy_NGINX',
                                defaultValue: false,
                                description: 'Deploy NGINX'
                            )
        booleanParam(
                                name: 'Build_App',
                                defaultValue: false,
                                description: 'Build App'
                            )
        booleanParam(
                                name: 'Deploy_App',
                                defaultValue: false,
                                description: 'Deploy App'
                            )
    }
    stages {
        stage('Hello') {
            steps {
                    script {
                        if (params.Build_App) {
                            checkout changelog: false, poll: false, scm: scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'github', url: 'git@github.com:packofviceroy/springtest.git']])
                                echo "${WORKSPACE}"
                                sh 'export DOCKER_TLS_VERIFY="1"'
                                sh 'export DOCKER_HOST="tcp://192.168.49.2:2376"'
                                sh 'export DOCKER_CERT_PATH="/home/dumbo/.minikube/certs"'
                                sh 'export MINIKUBE_ACTIVE_DOCKERD="minikube"'
      	                        sh 'docker build -t springtest/latest .'
                        }
                        if (params.Deploy_App) {
                            echo 'Deploy App!'
                            sh 'docker run -p 4337:8080 -d -t springtest/latest'
                        }
                        if (params.Deploy_NGINX) {
                            echo 'Deploy NGINX!'
                        }
                    }
            }
        }
    }
}